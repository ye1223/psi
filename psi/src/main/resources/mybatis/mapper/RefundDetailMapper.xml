<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.roadjava.psi.mapper.RefundDetailMapper">

  <select id="selectByRefundIds" resultType="RefundDetailVO">
    select
    a.*,
    b.name as goodsName
    from refund_detail a
    left join goods b on a.goods_id = b.id
    where a.refund_id in
    <foreach item="item" collection="list"  open="(" separator="," close=")">
      #{item}
    </foreach>
  </select>

</mapper>